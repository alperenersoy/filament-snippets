{
    "Filament Grid Layout": {
        "prefix": [
            "grid",
            "gridlayout",
            "layoutgrid",
            "gl",
            "lg"
        ],
        "body": [
            "Grid::make($1)",
            "\t->schema(${2:[\n\t\t$3\n\t]})$0,"
        ],
        "description": "Grid layout for form builder."
    },
    "Filament Grid Layout with Breakpoints": {
        "prefix": [
            "gridbreakpoint",
            "gridlayoutbreakpoint",
            "layoutgridbreakpoint",
            "gb",
            "glb",
            "lgb"
        ],
        "body": [
            "Grid::make([${3:",
            "\t'default' => ${4:1},}${5:",
            "\t'sm' => ${6:2},}${7:",
            "\t'md' => ${8:3},}${9:",
            "\t'lg' => ${10:4},}${11:",
            "\t'xl' => ${12:6},}${13:",
            "\t'2xl' => ${14:8},}",
            "])",
            "\t->schema(${15:[\n\t\t$16\n\t]})$0,"
        ],
        "description": "Grid layout with breakpoints for form builder."
    },
